<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moringaschool.waterrefillrecords">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WaterRefillRecords">
        <activity
            android:name=".ui.SaleDetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.AddSalesActivity"
            android:exported="true" />
        <activity
            android:name=".ui.CreateAccountActivity"
            android:exported="true" />
        <activity
            android:name=".ui.SalesActivity"
            android:exported="true" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moringaschool.waterrefillrecords.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>